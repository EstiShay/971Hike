{{#partial "navtabs"}}

    <ul class="nav nav-tabs">
        <li role="presentation"><a href="/">Home</a></li>
        <li role="presentation"><a href="/trails/new">Find a trail</a></li>
        <li role="presentation"><a href="/trails">See all trails</a></li>
        <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">My Trails By Region<span class="caret"></span></a>
            <ul class="dropdown-menu">
                {{#if regions}}
                    {{#each region}}
                        <li><a href="/regions/{{id}}">{{name}}</a></li>
                    {{/each}}
                {{else}}
                    <li>No regions yet</li>
                {{/if}}
            </ul>
        </li>
    </ul>
{{/partial}}

{{#partial "content"}}

    {{#if editJournal}}
        <h2>Update a journal entry</h2>
        <p><a href="/journals/{{editJournal.id}}/delete">delete this trail</a></p>
        <form action="/journals/{{editJournal.id}}/update" method="post">
            <div class="form-group">
                <label for="userId">Your user ID: </label>
                <input id="userId" name="userId" type="number" value="{{editJournal.userId}}" required>
            </div>
            <div class = "form-group">
                <label for="createdAt">Date: </label>
                <input id="createdAt" name="createdAt" type="date" value="{{editJournal.createdAt}}" required>
            </div>
            <div class = "form-group">
                <label for="bestSeason">Best Season: </label>
                <input id="bestSeason" name="bestSeason" type="text" value="{{editJournal.bestSeason}}" required>
            </div>
             <p>Done the hike yet?</p>
            <div class="radio">
                <label>
                    <input type="radio" name="didTheHike" value=true>
                    Yes
                </label>
            </div>
            <div class="radio">
                <label>
                    <input type="radio" name="didTheHike" value=false>
                    No
                </label>
            </div>
            <div class = "form-group">
                <label for="notes">Notes: </label>
                <input id="notes" name="notes" type="text" value="{{editJournal.notes}}" required>
            </div>
    {{else}}
        <h2>Log a new trail!</h2>
        <form action="/trails/{{trailId}}" method="post">
            <div class="form-group">
                <label for="userId">Your user ID: </label>
                <input id="userId" name="userId" type="number" required>
            </div>
            <div class = "form-group">
                <label for="createdAt">Date: </label>
                <input id="createdAt" name="createdAt" type="date" required>
            </div>
            <div class = "form-group">
                <label for="bestSeason">Best Season: </label>
                <input id="bestSeason" name="bestSeason" type="text" required>
            </div>
            <p>Done the hike yet?</p>
            <div class="radio">
                <label>
                    <input type="radio" name="didTheHike" value=true>
                    Yes
                </label>
            </div>
            <div class="radio">
                <label>
                    <input type="radio" name="didTheHike" value=false>
                    No
                </label>
            </div>
            <div class = "form-group">
                <label for="notes">Notes: </label>
                <input id="notes" name="notes" type="text" required>
            </div>
    {{/if}}
        <button type="submit" class="btn btn-success">Submit</button>
    </form>

{{/partial}}

{{>layout.hbs}}